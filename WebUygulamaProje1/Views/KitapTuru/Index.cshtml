@model List<KitapTuru>
<div class="container">

    <div class="row pt-3 pb-4">
        <!-- bootstrap-boşluk ekleme gibi -->
        
           <div>
               <h1>Kitap Türleri</h1>
           </div>
    </div>                       

<table class="table table-bordered">
    <thead>

    <tr>
        <th>
            Id
        </th>
        <th>
            Kitap Türü
        </th>
                <th>
                    Kitap Türü
                </th>
                <th>
                    Kitap Türü
                </th>
    </tr>
    </thead>
    <tbody>
        
        @foreach (var KitapTuru in Model)
        {

            <tr>
                <td>@KitapTuru.Id</td>
                <td>@KitapTuru.Ad</td>
                <td>
                <a asp-controller="KitapTuru" asp-action="Guncelle" asp-route-id="@KitapTuru.Id" type="button" class="btn btn-success" style="width=250px">Güncelle</a>
                </td>
                <td>
                        <a asp-controller="KitapTuru" asp-action="Sil" asp-route-id="@KitapTuru.Id" type="button" class="btn btn-danger" style="width=250px">Sil</a>
                </td>
            </tr>
        }

    </tbody>
</table>
    <div class="row pt-3 pb-2">
       
        <div>
            <!-- button yaptık a etiketi ile yapmamızın nedeni navigasyon olması -->
            <a asp-controller="KitapTuru" asp-action="Ekle" class="btn btn-lg btn-primary" type="button">
                Yeni Kitap Türü Oluştur
            </a>
        </div>
    </div>
</div>